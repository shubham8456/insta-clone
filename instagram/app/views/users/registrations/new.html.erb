<%= stylesheet_link_tag "sign-up" %>
<p class="alert"><%= alert %></p>
<p class="notice"><%= notice %></p>

<section class="signup-page">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="insta-signup-form">
    <div class="heading"></div>
    
    <div class="two-column-field">
      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, class:"field-text" %>
      </div>

      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autofocus: true, class:"field-text" %>
      </div>
    </div>

    <div class="two-column-field">
      <div class="field">
        <%= f.label :user_name %><br />
        <%= f.text_field :user_name, autofocus: true, class:"field-text" %>
      </div>

      <div class="field">
        <%= f.label :profile_image %><br />
        <%= f.file_field :profile_image, autofocus: true, class:"field-image" %>
      </div>
    </div>

    <div class="two-column-field">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"field-text" %>
      </div>

      <div class="field">
        <%= f.label :phone %><br />
        <%= f.telephone_field :phone, autofocus: true, class:"field-text" %>
      </div>
    </div>

    <div class="two-column-field">
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(min. <%= @minimum_password_length %> chars.)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"field-text" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"field-text" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :bio %><br />
      <%= f.text_area :bio, autofocus: true, class:"field-text bio-field-text" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class:"login-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</section>

